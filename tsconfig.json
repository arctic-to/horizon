{
  "extends": "hitoka/tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "build",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
